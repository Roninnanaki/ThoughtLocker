<div class="pop-up">
	<% @blog.tags.build %>
    <%= form_for(@blog) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.text_field :name, :id => "name_form", :placeholder => "Blog Name" %>
      
      <%= text_area_tag "tags_list", @tags, :placeholder => "Tags" %>

      <%= f.submit "Submit", :class => "btn btn-large btn-primary" %>
    <% end %>
</div>